<%= form_for [@state, @application] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, :placeholder => 'yyyy-mm-dd' %>
  </div>

  <div class="form-group">
    <%= f.label :frequency %>
    <%= f.text_field :frequency %>
  </div>

  <div class="form-group">
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <%= f.hidden_field :attachment_cache %>
  </div>

  <div class="form-group">
    <%= f.submit "Save" %>
  </div>
<% end %>

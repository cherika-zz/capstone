<% if policy(Reg.new).create? %>
  <%= link_to "New Regs", new_state_reg_path(@state), class: 'btn btn-success' %>
<% end %>


<div class="row">
  <div class="col-md-8">
    <% @regs.each do |reg| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to reg.name, [@state, reg] %>

            <% if policy(reg).destroy? %>
              <%= link_to "Delete", state_reg_path(@state, reg), method: :delete, class: 'btn btn-danger',
            data: { confirm: 'Are you sure you want to delete this?'} %>
            <% end %>

            <% if policy(reg).edit? %>
              <%= link_to "Edit", edit_state_reg_path(@state, reg), class: 'btn btn-default' %>
            <% end %>

          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>

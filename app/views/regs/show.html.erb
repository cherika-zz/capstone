
<!-- the first argument is just the text,
the second creates the href attribute on an a tag, which is the link -->
<p><%= link_to @reg.name, @reg.attachment.url %></p>

<% if policy(@reg).destroy? %>
  <%= link_to "", state_reg_path(@state, @reg), method: :delete, class: 'pull-right glyphicon glyphicon-remove',
data: { confirm: 'Are you sure you want to delete this?'} %>
<% end %>

<% if policy(@reg).edit? %>
  <%= link_to "", edit_state_reg_path(@state, @reg), class: 'pull-right glyphicon glyphicon-pencil' %>
<% end %>
